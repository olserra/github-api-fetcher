<div class="container">
  <div class="title"> 
    <h3>GitHub Comparator</h3>
  </div>

  <div class="search-form">
    <%= form_tag(search_path, 
                :method => "get", 
                :class=>"form-inline my-2 my-lg-0") do %>
      <%= text_field_tag :search, 
                          params[:search], 
                          placeholder: "Search profiles", 
                          class: "form-control mr-sm-2" %>

        <span class="input-group-btn">
          <%= submit_tag "Search", class: 'btn-sucess btn-info' %>
        </span>
    <% end %>
  </div>

  <div class="display-info">
    <p>👨🏻‍💻 Great. We found a user called: <strong><%= @login %></strong></p>
    <p>📭 User url is: <strong><%= @url %></strong></p> 
    <p>🗂 Number of repos: <strong><%= @repos %></strong></p> 
  </div>
</div>

